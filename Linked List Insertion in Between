#include <iostream>
using namespace std;

class node
{   public:
    int data;
    node *next;
};

void linked_list_traversal(node *ptr)
{
    while(ptr!=NULL)
    {
        cout<<ptr->data<<endl;
        ptr=ptr->next;
    }
}

node * insertion_in_between(node *head,int data,int index)
{
    node *ptr=new node;
    node *p=head;
    int i=0;
    while(i!=index-1)
    {
        p=p->next;
        i++;
    }
    ptr->data=data;
    ptr->next=p->next;
    p->next=ptr;
    return head;
}

int main()
{   
    node *head=new node;
    node *second=new node;
    node *third=new node;
    node *fourth=new node;
    head->data=1;
    head->next=second;
    second->data=2;
    second->next=third;
    third->data=3;
    third->next=fourth;
    fourth->data=4;
    fourth->next=NULL;
    linked_list_traversal(head);
    head=insertion_in_between(head,10,2);
    linked_list_traversal(head);
    return 0;
}
